<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: rgb(228, 221, 221);
        }

        th {
            text-align: center;
            vertical-align: middle;
        }

        td {
            text-align: center;
            vertical-align: middle;
        }

        .btn-group {
            display: flex;
            justify-content: center;
            gap: 1px; /* Adds spacing between buttons */
        }

        .table td,
        .table th {
            padding: 10px; /* Adjusts spacing within table cells */
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">Database Tables</h1>

        <!-- Tab Navigation -->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="table1-tab" data-bs-toggle="tab" data-bs-target="#table1" type="button" role="tab" aria-controls="table1" aria-selected="true">
                    PAST EVENTS
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="table2-tab" data-bs-toggle="tab" data-bs-target="#table2" type="button" role="tab" aria-controls="table2" aria-selected="false">
                    UPCOMING EVENTS
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="table3-tab" data-bs-toggle="tab" data-bs-target="#table3" type="button" role="tab" aria-controls="table3" aria-selected="false">
                    EMPLOYEE RECORDS
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="table4-tab" data-bs-toggle="tab" data-bs-target="#table4" type="button" role="tab" aria-controls="table4" aria-selected="false">
                    EVENT STATISTICS
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="myTabContent">
            <!-- Table 1 Content -->
            <div class="tab-pane fade show active" id="table1" role="tabpanel" aria-labelledby="table1-tab">
                <div class="table-responsive mt-3">
                    <h1>Completed Event Records</h1>
                    <br><br>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Column 1</th>
                                <th>Column 2</th>
                                <th>Column 3</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>Data 1</td>
                                <td>Data 2</td>
                                <td>Data 3</td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>Data 4</td>
                                <td>Data 5</td>
                                <td>Data 6</td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Table 2 Content -->
            <div class="tab-pane fade" id="table2" role="tabpanel" aria-labelledby="table2-tab">
                <div class="table-responsive mt-3">
                    <h1>Upcoming Event Records</h1>
                    <br><br>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Event ID</th>
                                <th>Event Name</th>
                                <th>Date</th>
                                <th>Location</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>1</td>
                                <td>Sample Event</td>
                                <td>2024-12-05</td>
                                <td>New York</td>
                                <td>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-primary">Edit</button>
                                        <button class="btn btn-sm btn-danger">Delete</button>
                                    </div>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Table 3 Content -->
            <div class="tab-pane fade" id="table3" role="tabpanel" aria-labelledby="table3-tab">
                <div class="table-responsive mt-3">
                    <h1>Employee Records</h1>
                    <br>
                    <div class="d-flex justify-content-center my-3">
                        <a href="/addEmployee" class="btn btn-success">+ Add Employee </a>
                    </div>
                    <br>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Employee ID</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Username</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% employees.forEach(employee => { %>
                                <tr>
                                    <td><%= employee.emp_id %></td>
                                    <td><%= employee.emp_first_name %></td>
                                    <td><%= employee.emp_last_name %></td>
                                    <td><%= employee.emp_email %></td>
                                    <td><%= employee.emp_phone %></td>
                                    <td><%= employee.emp_username %></td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/editEmployee/<%= employee.emp_id %>" class="btn btn-sm btn-primary">Edit</a>
                                            <form action="/deleteEmployee/<%= employee.emp_id %>" method="POST" onsubmit="return confirmDeletion();" style="display: inline;">
                                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                        
                    </table>
                </div>
            </div>

            <script>
                function confirmDeletion() {
                    return confirm('Are you sure you want to delete this record?');
                }
            </script>
            

            <!-- Table 4 Content -->
            <div class="tab-pane fade" id="table4" role="tabpanel" aria-labelledby="table4-tab">
                <div class="table-responsive mt-3">
                    <p>This will be a tableau chart for Jen</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
