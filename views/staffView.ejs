<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: rgb(228, 221, 221);
        }

        th, td {
            text-align: center;
            vertical-align: middle;
        }

        .btn-group {
            display: flex;
            justify-content: center;
            gap: 1px;
        }

        .table td,
        .table th {
            padding: 10px;
        }
    </style>
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">Database Tables</h1>

        <!-- Tab Navigation -->
        <ul class="nav nav-tabs" id="myTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="table1-tab" data-bs-toggle="tab" data-bs-target="#table1" type="button" role="tab" aria-controls="table1" aria-selected="true">
                    PAST EVENTS
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="table2-tab" data-bs-toggle="tab" data-bs-target="#table2" type="button" role="tab" aria-controls="table2" aria-selected="false">
                    UPCOMING EVENTS
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="table3-tab" data-bs-toggle="tab" data-bs-target="#table3" type="button" role="tab" aria-controls="table3" aria-selected="false">
                    EMPLOYEE RECORDS
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="table4-tab" data-bs-toggle="tab" data-bs-target="#table4" type="button" role="tab" aria-controls="table4" aria-selected="false">
                    EVENT STATISTICS
                </button>
            </li>
        </ul>

        <!-- Tab Content -->
        <div class="tab-content" id="myTabContent">
            <!-- Table 1 Content -->
            <div class="tab-pane fade show active" id="table1" role="tabpanel" aria-labelledby="table1-tab">
                <div class="table-responsive mt-3">
                    <h1>Completed Event Records</h1>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Event ID</th>
                                <th>Event Name</th>
                                <th>Date of Event</th>
                                <th>Event Address</th>
                                <th>Event City</th>
                                <th>Event State</th>
                                <th>Event Zip</th>
                                <th>Actual Attendance</th>
                                <th>Actual Event Duration</th>
                                <th>Completed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% pastEvents.forEach(event => { %>
                                <tr>
                                    <td><%= event.event_id %></td>
                                    <td><%= event.event_name %></td>
                                    <td><%= event.date_of_event %></td>
                                    <td><%= event.event_address %></td>
                                    <td><%= event.event_city %></td>
                                    <td><%= event.event_state %></td>
                                    <td><%= event.event_zip %></td>
                                    <td><%= event.actual_attendance || 'N/A' %></td>
                                    <td><%= event.actual_event_duration || 'N/A' %></td>
                                    <td><%= event.completed ? 'Yes' : 'No' %></td>
                                    <td>
                                        <a href="/editPastEvent/<%= event.event_id %>" class="btn btn-sm btn-primary">Edit</a>
                                        <form 
                                            onsubmit="return confirm('Are you sure you want to delete the past event: <%= event.event_name %>?')" 
                                            method="POST" 
                                            action="/deleteEvent/<%= event.event_id %>"
                                        >
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                        
                    </table>
                </div>
            </div>

            <!-- Table 2 Content -->
            <div class="tab-pane fade" id="table2" role="tabpanel" aria-labelledby="table2-tab">
                <div class="table-responsive mt-3">
                    <h1>Upcoming Event Records</h1>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Event ID</th>
                                <th>Event Name</th>
                                <th>Date of Event</th>
                                <th>Event Address</th>
                                <th>Event City</th>
                                <th>Event State</th>
                                <th>Event Zip</th>
                                <th>Event Description</th>
                                <th>Estimated Attendance</th>
                                <th>Estimated Event Duration</th>
                                <th>Privacy</th>
                                <th>Number of Sewers</th>
                                <th>Number of Machines</th>
                                <th>Number of Children Under 10</th>
                                <th>Completed</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% upcomingEvents.forEach(event => { %>
                                <tr>
                                    <td><%= event.event_id %></td>
                                    <td><%= event.event_name %></td>
                                    <td><%= event.date_of_event %></td>
                                    <td><%= event.event_address %></td>
                                    <td><%= event.event_city %></td>
                                    <td><%= event.event_state %></td>
                                    <td><%= event.event_zip %></td>
                                    <td><%= event.event_description || 'N/A' %></td>
                                    <td><%= event.estimated_attendance || 'N/A' %></td>
                                    <td><%= event.estimated_event_duration || 'N/A' %></td>
                                    <td><%= event.privacy || 'N/A' %></td>
                                    <td><%= event.number_of_sewers || 0 %></td>
                                    <td><%= event.number_of_machines || 0 %></td>
                                    <td><%= event.number_of_children_under_10 || 0 %></td>
                                    <td><%= event.completed ? 'Yes' : 'No' %></td>
                                    <td>
                                        <a href="/editUpcomingEvent/<%= event.event_id %>" class="btn btn-sm btn-primary">Edit</a>
                                        <form 
                                            onsubmit="return confirm('Are you sure you want to delete the event: <%= event.event_name %>?')" 
                                            method="POST" 
                                            action="/deleteEvent/<%= event.event_id %>"
                                            >
                                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Table 3 Content -->
            <div class="tab-pane fade" id="table3" role="tabpanel" aria-labelledby="table3-tab">
                <div class="table-responsive mt-3">
                    <h1>Employee Records</h1>
                    <div class="d-flex justify-content-center my-3">
                        <a href="/addEmployee" class="btn btn-success">+ Add Employee </a>
                    </div>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Employee ID</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Email</th>
                                <th>Phone Number</th>
                                <th>Username</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% employees.forEach(employee => { %>
                                <tr>
                                    <td><%= employee.emp_id %></td>
                                    <td><%= employee.emp_first_name %></td>
                                    <td><%= employee.emp_last_name %></td>
                                    <td><%= employee.emp_email %></td>
                                    <td><%= employee.emp_phone %></td>
                                    <td><%= employee.emp_username %></td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="/editEmployee/<%= employee.emp_id %>" class="btn btn-sm btn-primary">Edit</a>

                                                <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>

            <!-- Table 4 Content -->
            <div class="tab-pane fade" id="table4" role="tabpanel" aria-labelledby="table4-tab">
                <div class="table-responsive mt-3">
                    <p>This will be a Tableau chart for Jen.</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
